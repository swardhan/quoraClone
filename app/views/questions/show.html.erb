<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<%= render 'answers/form' %>
<ul>
<% @answers.each do |answer| %>
  <% if answer.content? %>  
    <li>
      <%= answer.content %>
    </li>
  <% end %>
<% end %>
</ul>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
